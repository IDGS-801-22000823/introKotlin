<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#87CEEB"
    android:id="@+id/main"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvTituloBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Palabras"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#87CEEB"
        android:padding="12dp"
        android:layout_marginBottom="25dp" />

    <RadioGroup
        android:id="@+id/rgIdioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <RadioButton
            android:id="@+id/rbEspanol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EspaÃ±ol"
            android:textColor="#000000"
            android:textSize="16sp"
            android:checked="true"
            android:layout_marginBottom="8dp"
            android:buttonTint="#000000" />

        <RadioButton
            android:id="@+id/rbIngles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingles"
            android:textColor="#000000"
            android:textSize="16sp"
            android:buttonTint="#000000" />

    </RadioGroup>

    <TextView
        android:id="@+id/tvPalabraBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palabra a Buscar"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/etPalabraBuscar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Ball"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:textSize="14sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:text="Buscar"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvPalabraEncontrada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="palabra encontrada"
        android:textSize="14sp"
        android:textColor="#000000"
        android:background="#E0E0E0"
        android:padding="12dp"
        android:gravity="center"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PELOTA"
        android:textSize="24sp"
        android:textColor="#00AA00"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginBottom="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnRegresarMenuBuscar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Regresar al Menu"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_gravity="center" />

</LinearLayout>