<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#87CEEB"
    android:id="@+id/main"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvTituloCapturar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Capturar Palabras"
        android:textSize="18sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:background="#87CEEB"
        android:padding="12dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/tvEspanol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Español"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="5dp" />

    <EditText
        android:id="@+id/etEspanol"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="mesa"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:textSize="14sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="15dp" />

    <TextView
        android:id="@+id/tvIngles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inglés"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="5dp" />

    <EditText
        android:id="@+id/etIngles"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="table"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:textSize="14sp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp" />

    <Button
        android:id="@+id/btnRegresarMenu"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Regresar al MenU"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_gravity="center" />

</LinearLayout>